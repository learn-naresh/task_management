<h1>Tasks</h1>

<%= link_to 'New Task', new_task_path %>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>State</th>
    <th>Deadline</th>
    <th>Actions</th>
  </tr>
  <% @tasks.each do |task| %>
    <tr>
      <td><%= task.title %></td>
      <td><%= task.description %></td>
      <td><%= task.status %></td>
      <td><%= task.deadline %></td>
      <td>
        <%= link_to 'Edit', edit_task_path(task) %>
        <%= link_to 'Delete', task, method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
</table>
