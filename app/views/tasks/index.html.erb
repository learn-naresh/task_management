
<h2 class="text-4xl font-extrabold dark:text-white">Tasks List</h2>
<%= link_to 'New Task', new_task_path %>

<div>
  <% if @tasks.empty? %>
    <p>No tasks found for the specified filters.</p>
  <% else %>
    <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
      <table class='w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400'>
        <thead>
          <tr class='text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400'>
            <th scope="col" class='px-6 py-3'>Title</th> 
            <th scope="col" class='px-6 py-3'>Description</th>
            <th scope="col" class='px-6 py-3'>Status</th> 
            <th scope="col" class='px-6 py-3'>Deadline</th> 
            <th scope="col" class='px-6 py-3'>Assigned User</th> 
            <th colspan="3" scope="col" class='px-6 py-3'>Actions</th> 
          </tr>
        </thead>
        <tbody>
          <% @tasks.each do |task| %>
            <tr class='odd:bg-white odd:dark:bg-gray-900 even:bg-gray-50 even:dark:bg-gray-800 border-b dark:border-gray-700'>
              <td class='px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white'>
                <a href="/tasks/<%= task.id %>"><%= task.title %></a>
              </td>
              <td class='px-6 py-4'><%= task.description %></td>
              <td class='px-6 py-4'><%= task.status %></td>
              <td class='px-6 py-4'><%= task.deadline %></td>
              
              <td class='px-6 py-4'<%= task.assigned_user ? task.assigned_user.email : "Unassigned" %><</td>
              <td class='px-6 py-4'>
                <%= link_to 'Show', task %>
                <%= link_to 'Edit', edit_task_path(task) %>
                <%= link_to 'Delete', task, method: :delete, data: { confirm: 'Are you sure?' } %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>
